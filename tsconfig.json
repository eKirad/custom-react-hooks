{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES2015",
        "moduleResolution": "Node",
        "declaration": true,
        "esModuleInterop": true,
        "jsx": "react",
        "outDir": "dist/esm",
        "strict": true,
        "lib": ["es5", "ES2015", "ES2016", "DOM", "ESNext"],
        "types": ["node"],
        "noImplicitAny": true,
        "sourceMap": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/__tests__/*"]
}
